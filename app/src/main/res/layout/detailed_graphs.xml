<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true">
<LinearLayout
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:weightSum="1" android:gravity="center">

    <LinearLayout android:id="@+id/genderChart" android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent" android:layout_height="400dp" />

    <LinearLayout android:id="@+id/ageChart" android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent" android:layout_height="400dp" />

    <LinearLayout android:id="@+id/insulinRegimen" android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="400dp"
        android:gravity="center_horizontal"
        />




</LinearLayout>
</ScrollView>